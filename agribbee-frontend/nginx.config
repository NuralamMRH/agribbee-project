server {
    server_name backend.soletrade.co.th;
    
    # Increase client max body size to match multer limit (1000MB)
    client_max_body_size 1000M;

    location / {
        proxy_pass http://localhost:8000;  # your Node.js app port
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/backend.soletrade.co.th/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/backend.soletrade.co.th/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = backend.soletrade.co.th) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name backend.soletrade.co.th;
    return 404; # managed by Certbot


}